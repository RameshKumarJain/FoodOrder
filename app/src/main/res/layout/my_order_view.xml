<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/restaurant_name_txt"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:maxHeight="48dp"
        android:maxWidth="192dp"
        android:minWidth="96dp"
        android:textColor="#1D1F21"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/grandTotal"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:gravity="end"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/restaurant_name_txt"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:maxWidth="48dp"
        android:text="@string/date"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/restaurant_name_txt"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/dateLabel"
        android:text="@string/date"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/paidViaLabel"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/restaurant_name_txt"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@id/paidViaTxt"
        android:gravity="end"
        android:text="@string/paid_via"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paidViaTxt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/restaurant_name_txt"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:gravity="end"
        android:text="@string/paid_via"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/orderStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/dateLabel"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:maxWidth="96dp"
        android:text="Order Status"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderStatusTxt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/dateTxt"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@id/orderStatusLabel"
        android:text="@string/date"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/track_order"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/dateTxt"
        android:layout_margin="12dp"
        android:textSize="16dp"
        android:text="Live Status"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        />

</RelativeLayout>