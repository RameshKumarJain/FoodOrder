<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedCardsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/saved_cards_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="@string/saved_cards"
        app:titleTextColor="@color/white" />
    <ListView
        android:id="@+id/saved_cards_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/saved_cards_toolbar">
    </ListView>
    <TextView
        android:id="@+id/message_txt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/saved_cards_toolbar"
        android:text="@string/yet_no_cards_saved"
        android:visibility="gone"
        />

</RelativeLayout>