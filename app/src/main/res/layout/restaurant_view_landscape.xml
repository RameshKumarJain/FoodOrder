<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rectangle"
    android:padding="12dp"
    android:id="@+id/restaurant_relative_view_landscape"
    >
    <ImageView
        android:id="@+id/res_img"
        android:layout_width="144dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/image"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        />

    <TextView
        android:id="@+id/restaurant_name_txt"
        android:layout_width="144dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/res_img"
        android:maxLines="2"
        android:textColor="#1D1F21"
        android:layout_marginEnd="12dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/veg_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_alignEnd="@+id/restaurant_name_txt"
        android:layout_below="@+id/res_img" />

    <TextView
        android:id="@+id/rating_txt"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/res_img"
        android:layout_alignStart="@+id/res_img"
        android:background="@color/rating_good"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/live_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/rating_txt"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/offer_txt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/rating_txt"
        android:textColor="#E59925"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>