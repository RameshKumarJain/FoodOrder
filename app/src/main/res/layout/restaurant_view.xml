<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurant_relative_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
   >

    <ImageView
        android:id="@+id/res_img"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:contentDescription="@string/image"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <TextView
        android:id="@+id/restaurant_name_txt"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_toEndOf="@+id/res_img"
        android:maxLines="2"
        android:minWidth="96dp"
        android:layout_marginTop="24dp"
        android:textColor="#1D1F21"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating_txt"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_below="@+id/restaurant_name_txt"
        android:layout_toEndOf="@+id/res_img"
        android:layout_marginTop="12dp"
        android:background="@color/rating_good"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/live_status_txt"
        android:layout_width="168dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/restaurant_name_txt"
        android:gravity="end"
        android:layout_marginTop="12dp"

        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/veg_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/restaurant_name_txt"
        android:layout_alignEnd="@+id/live_status_txt" />

    <TextView
        android:id="@+id/offer_txt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rating_txt"
        android:gravity="end"
        android:maxWidth="216dp"
        android:textColor="#E59925"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>