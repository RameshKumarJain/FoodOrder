<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/veg_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/veg_status"
        android:paddingTop="12dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/item_name"
        android:layout_toStartOf="@id/btn_item_decrement"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_discount_price"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_below="@id/btn_item_decrement"
        android:layout_toEndOf="@id/item_name"
        android:layout_toStartOf="@id/btn_item_decrement"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/item_add_btn"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorAccent"
        android:text="@string/add"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_item_decrement"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toStartOf="@+id/no_of_items"
        android:background="@drawable/ic_remove_black_24dp"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/no_of_items"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toStartOf="@+id/btn_item_increment"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btn_item_increment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_add_black_24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="invisible"
        />

</RelativeLayout>