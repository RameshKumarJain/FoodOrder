<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="order.food.com.foodorder">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <provider
            android:name=".RestaurantContentProvider"
            android:authorities="order.food.com.foodorder"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|screenSize"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ModifyLocationActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />
        <activity
            android:name=".ModifyRestaurantActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />
        <activity
            android:name=".ChangePasswordActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />
        <activity
            android:name=".FAQActivity"
            android:noHistory="true" />
        <activity
            android:name=".SavedCardsActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />
        <activity
            android:name=".MyOrdersActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />
        <activity
            android:name=".RestaurantItemsActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true" />

        <activity
            android:name=".SelectLiveOfferActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            />
        <activity
            android:name=".BasketPaymentActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            />
        <activity
            android:name=".OrderTrackActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            />
    </application>

</manifest>